@model Note2Book.Models.Folder

@{
    ViewBag.Title = "Редактирование папки";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="text-center my-4" style="color: #4B0082; font-size: 2.5rem;">Редактировать папку</h2>

    <form asp-action="Edit"  asp-controller="Conspectus" method="post">
        <input asp-for="Id" type="hidden" value="@Model.Id" />

        <div class="form-group">
            <label for="@Model.Text">Название папки</label>
            <input asp-for="Text" type="text" class="form-control" value="@Model.Text" required />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="@Model.ImageUrl">URL изображения папки</label>
            <input asp-for="ImageUrl" type="text" class="form-control" value="@Model.ImageUrl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4">Сохранить изменения</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary mt-4">Отмена</a>
    </form>
</div>