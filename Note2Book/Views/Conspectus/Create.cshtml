@model Note2Book.Models.Folder

@{
ViewBag.Title = "Создать новую папку";
Layout = "_Layout";
}

<div class="container">
    <h2 class="text-center my-4 display-4">СОЗДАТЬ НОВУЮ ПАПКУ</h2>

    <form asp-action="Create" method="post" id="formochka">
        <div class="form-group">
            <label for="Text" style>Название папки</label>
            <input type="text" class="form-control" id="Text" name="Text" required/>
        </div>
        <div class="form-group">
            <label for="ImageUrl">URL изображения (опционально)</label>
            <input type="url" class="form-control" id="ImageUrl" name="ImageUrl" />
        </div>

        <button type="submit" class="btn btn-lg create-folder-btn mt-3">Создать папку</button>
    </form>
</div>

<style>
    body {
        background-color: #F9F8FC;
        font-family: 'Lora', serif;
    }


    h2 {
        font-weight: 700;
        text-align: center;
        margin-bottom: 40px;
        font-size: 2.5rem !important;
        font-family: 'Lora', serif;
        color: #3D2765;
             
        position: relative;
        display: inline-block;
       
        width: 100%;
    }

    h2::after {
        content: '';
        position: absolute;
        width: 50%;
        height: 4px;
        background-color: #A185D3;
        bottom: -10px;
        left: 25%;
        border-radius: 2px;
    }

    #formochka {
        max-width: 600px;
        margin: 0 auto;
    }

    label {
        color: #283C63;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 10px;
        display: block;
    }

    .form-control {
        font-family: 'Lora', serif;
        padding: 15px;
        border-radius: 10px;
        font-size: 1rem;
        border: 2px solid #A185D3;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #4B0082;
        box-shadow: none;
        outline: none;
    }

    .btn-lg {
        font-size: 1rem;
        padding: 12px 24px;
        border-radius: 10px;
        font-weight: bold;
        font-family: 'Lora', serif;
        transition: background-color 0.3s ease;
    }

    .create-folder-btn {
        background-color: #A185D3;
        color: white;
        border: none;
    }

    .create-folder-btn:hover {
        background-color: rgba(161, 133, 211, 0.7);
        color: white;
    }
</style>


