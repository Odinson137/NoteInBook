@model Note2Book.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Авторизация";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="text-center my-4" style="color: #4B0082; font-size: 2.5rem;">Авторизация</h2>

    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <form asp-action="Login" method="post" class="shadow-lg p-4" style="background: linear-gradient(135deg, #e0c3fc, #8ec5fc); border-radius: 15px;">
                
                <div class="form-group mb-3">
                    <label asp-for="Login" class="form-label" style="color: #283C63; font-weight: bold;">Логин</label>
                    <input asp-for="Login" class="form-control" style="border-radius: 10px;" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label" style="color: #283C63; font-weight: bold;">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" style="border-radius: 10px;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg" style="background-color: #4B0082; color: white; border-radius: 10px; padding: 10px 20px;">Войти</button>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center" style="margin-top: 20px;">
            @TempData["Error"]
        </div>
    }
</div>

<!-- Стили -->
<style>
    .form-label {
        font-weight: bold;
        color: #4B0082;
    }
</style>