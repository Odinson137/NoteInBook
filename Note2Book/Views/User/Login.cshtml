@model Note2Book.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Авторизация";
    Layout = "_Layout";
}

<div class="container">
    <h2 class="text-center my-4" style="font-size: 2.5rem; font-weight: bold; color: #4B0082;">АВТОРИЗАЦИЯ</h2>

    <div class="row mb-4">
        <div class="col-md-6 mx-auto">
            <form asp-action="Login" method="post" class="shadow-lg p-4" style="background-color: #fff; border-radius: 15px;">  <!-- Белый фон для формы -->

                <div class="form-group mb-3">
                    <label asp-for="Login" class="form-label">Логин</label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-lg">Войти</button>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center" style="margin-top: 20px;">
            @TempData["Error"]
        </div>
    }
</div>


<style>
    body {
        font-family: 'Lora', serif;
        background-color: #f9f8fc;
        color: #333;
    }

    .form-label {
        font-weight: bold;
        color: #4B0082;
    }

    .form-control {
        font-family: 'Lora', serif;
        border-radius: 10px;
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        border: 1px solid #ccc;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #4B0082; 
        box-shadow: 0 0 8px rgba(75, 0, 130, 0.3);
    }

    .btn {
        background-color: #A185D3;
        color: #fff;
        border-radius: 10px;
        padding: 12px 24px;
        font-family: 'Lora', serif;
        font-weight: bold;
        border: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .btn:hover {
        background-color: rgba(161, 133, 211, 0.7); 
        color: #fff;
        transform: scale(1.05);
    }

    .shadow-lg {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .text-danger {
        color: #d9534f !important;
    }

    h2 {
        color: #3D2765;
        font-family: 'Lora', serif;
        font-weight: 700;
        font-size: 2.5rem;
    }
</style>
