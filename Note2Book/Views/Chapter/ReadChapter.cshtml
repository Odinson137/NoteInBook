@model Note2Book.ViewModels.ChapterViewModel

<div class="chapter-reading">
    <div class="title-container">
        <h2>@Model.Chapter.Title</h2>
        <a href="@Url.Action("Book", "Book", new { id = Model.Chapter.Book.Id })" class="btn btn-info return-btn">Вернуться к книге</a>
    </div>

    @if (Html.Raw(Model.PageText) != null)
    {
        @foreach (var text in Html.Raw(Model.PageText).ToString()!.Split("\n"))
        {
            <div class="chapter-text" style="margin-bottom: 10px">@text</div>
        }
    }

    <div class="navigation-buttons">
        @if (Model.PreviousChapter != null)
        {
        <a href="@Url.Action("ReadChapter", "Chapter", new { chapterId = Model.PreviousChapter, pageNumber = 1 })"
           class="btn btn-secondary">Предыдущая глава</a>
        }

        @if (Model.CurrentPage > 1)
        {
        <a href="@Url.Action("ReadChapter", "Chapter", new { chapterId = Model.Chapter.Id, pageNumber = Model.CurrentPage - 1 })"
           class="btn btn-primary">Предыдущая страница</a>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
        <a href="@Url.Action("ReadChapter", "Chapter", new { chapterId = Model.Chapter.Id, pageNumber = Model.CurrentPage + 1 })"
           class="btn btn-primary">Следующая страница</a>
        }

        @if (Model.NextChapter != null)
        {
        <a href="@Url.Action("ReadChapter", "Chapter", new { chapterId = Model.NextChapter, pageNumber = 1 })"
           class="btn btn-success">Следующая глава</a>
        }
    </div>
</div>

<style>
    .chapter-reading {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .title-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .chapter-text {
        text-align: justify;
        line-height: 1.6;
        font-size: 1.1em;
        color: #333;
    }

    .return-btn {
        padding: 8px 16px;
        background-color: #6A5ACD; /* Фиолетовый */
        border-radius: 5px;
        color: white;
        text-decoration: none;
        border: none; /* Убираем border-color */
        outline: none;
        box-shadow: none;
    }

    .return-btn:hover {
        background-color: #483D8B; /* Темнее фиолетовый */
        color: white; /* Цвет текста при наведении */
    }

    .return-btn:focus {
        outline: none;
        box-shadow: none;
    }

    .navigation-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-top: 20px;
        gap: 10px;
    }

    .navigation-buttons a {
        display: inline-block;
        padding: 8px 16px;
        text-decoration: none;
        border-radius: 5px;
        color: white;
        font-size: 0.9em;
        text-align: center;
        border: none; /* Убираем border-color */
        outline: none;
        box-shadow: none;
    }

    .navigation-buttons a:hover {
        color: white; /* Цвет текста при наведении */
    }

    .navigation-buttons a:focus {
        outline: none;
        box-shadow: none;
    }

    .btn-primary {
        background-color: #4B0082; /* Индиго */
    }

    .btn-primary:hover {
        background-color: #3A006F; /* Темнее индиго */
        color: white; /* Цвет текста при наведении */
    }

    .btn-success {
        background-color: #6A5ACD; /* Фиолетовый */
    }

    .btn-success:hover {
        background-color: #483D8B; /* Темнее фиолетовый */
        color: white; /* Цвет текста при наведении */
    }

    .btn-secondary {
        background-color: #808080; /* Серый */
    }

    .btn-secondary:hover {
        background-color: #696969; /* Темнее серый */
        color: white; /* Цвет текста при наведении */
    }

    .btn-info {
        background-color: #7B68EE; /* Светлее фиолетовый */
    }

    .btn-info:hover {
        background-color: #6A5ACD; /* Фиолетовый */
        color: white; /* Цвет текста при наведении */
    }
</style>


